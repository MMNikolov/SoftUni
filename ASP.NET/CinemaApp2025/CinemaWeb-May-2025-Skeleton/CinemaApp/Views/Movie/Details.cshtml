@using CinemaApp.Web.ViewModels.Movie
@model MovieDetailsViewModel

@{
	ViewData["Title"] = "Movie Details";
}

<div class="container mt-5">
	<div class="row">
		<div class="col-md-5">
			<img src="@Model.ImageUrl"
				 class="img-fluid rounded shadow"
				 alt="@Model.Title">
		</div>
		<div class="col-md-7">
			<h2 class="fw-bold text-primary mb-3">@Model.Title</h2>

			<p><strong>Genre:</strong> @Model.Genre</p>
			<p><strong>Release Date:</strong> @Model.ReleaseDate</p>
			<p><strong>Director:</strong> @Model.Director</p>
			<p><strong>Duration:</strong> @Model.Duration minutes</p>
			<hr />
			<h5 class="mt-3">Description</h5>
			<p>@Model.Description</p>

			<div class="mt-4 d-flex gap-2">
				<a asp-action="Index"
				   asp-controller="Movie"
				   class="btn btn-secondary btn-sm rounded-pill px-4 fw-bold">
					<i class="bi bi-arrow-left-circle"></i> Back to All Movies
				</a>

				<a asp-controller="Movie"
				   asp-action="Edit"
				   asp-route-id="@Model.Id"
				   class="btn btn-info btn-sm rounded-pill px-4 fw-bold text-white">
					<i class="bi bi-pencil-square"></i> Edit
				</a>

				<a asp-controller="Movie"
				   asp-action="Delete"
				   asp-route-id="@Model.Id"
				   class="btn btn-danger btn-sm rounded-pill px-4 fw-bold text-white">
					<i class="bi bi-trash"></i> Delete
				</a>
			</div>

		</div>
	</div>
</div>
